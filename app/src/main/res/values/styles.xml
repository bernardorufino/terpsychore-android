<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/navListDivider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TrackDisplay">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/trackPlaybackTextTerciary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="PlaybackButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:background">@drawable/playback_button_bg</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:tint">@color/trackPlaybackIconDeactivated</item>
    </style>

    <style name="PlaybackButton.LeftSpaced">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="PlaybackButton.RightSpaced">
        <item name="android:layout_marginRight">0dp</item>
    </style>


    <style name="ListItemContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/item_music_picker_half_padding</item>
        <item name="android:paddingRight">@dimen/item_music_picker_padding</item>
        <item name="android:paddingBottom">@dimen/item_music_picker_half_padding</item>
        <item name="android:paddingLeft">@dimen/item_music_picker_padding</item>
        <item name="android:background">@drawable/item_music_picker_bg</item>
    </style>

    <style name="ListItemLeftImage">
        <item name="android:layout_width">@dimen/item_music_picker_image_width</item>
        <item name="android:layout_height">@dimen/item_music_picker_image_height</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
    </style>

    <style name="ListItemTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ListItemTextDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="ListItemRightImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
        <item name="android:tint">@color/textSecondary</item>
    </style>

    <style name="ListItemRightImage.Last">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="ChatMessageContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">@dimen/chat_message_tick_size</item>
        <item name="android:layout_marginRight">50dp</item> <!-- 32 (image) + 2 * 9 (tick)  -->
    </style>

    <style name="ChatMessageContainer.Outgoing">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">@dimen/chat_message_tick_size</item>
    </style>

    <style name="ChatMessageTitle">

    </style>

    <style name="ChatMessageImage">
        <item name="android:layout_width">@dimen/chat_message_image_size</item>
        <item name="android:layout_height">@dimen/chat_message_image_size</item>
        <item name="android:tint">@color/navImageTint</item>
        <item name="android:src">@drawable/ic_account_circle_no_padding_white_48dp</item>
    </style>

    <style name="ChatMessageImage.Outgoing">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ChatMessageImage.Incoming">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/item_chat_message_top</item>
    </style>

    <style name="ChatMessageBubble">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@id/item_chat_image</item>
        <item name="android:layout_toLeftOf">@android:id/empty</item>
        <item name="android:layout_toRightOf">@id/item_chat_image</item>
        <item name="android:paddingTop">@dimen/chat_message_padding_top</item>
        <item name="android:paddingBottom">@dimen/chat_message_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/chat_message_tick_side_padding</item>
        <item name="android:paddingRight">@dimen/chat_message_opposite_tick_side_padding</item>
    </style>

    <style name="ChatMessageBubble.Outgoing">
        <item name="android:layout_toLeftOf">@id/item_chat_image</item>
        <item name="android:layout_toRightOf">@android:id/empty</item>
        <item name="android:paddingLeft">@dimen/chat_message_opposite_tick_side_padding</item>
        <item name="android:paddingRight">@dimen/chat_message_tick_side_padding</item>
    </style>

    <style name="ChatMessageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/chatMessageText</item>
        <!--<item name="android:singleLine">false</item>-->
    </style>

    <style name="ChatMessageText.Outgoing">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/chatOutgoingMessageText</item>
    </style>

</resources>
