<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TrackDisplay">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#BBFFFFFF</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="PlaybackButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:background">@drawable/playback_button_bg</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:tint">@color/playbackControlDeactivated</item>
    </style>

    <style name="PlaybackButton.LeftSpaced">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="PlaybackButton.RightSpaced">
        <item name="android:layout_marginRight">0dp</item>
    </style>


    <style name="ListItemContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/item_music_picker_half_padding</item>
        <item name="android:paddingRight">@dimen/item_music_picker_padding</item>
        <item name="android:paddingBottom">@dimen/item_music_picker_half_padding</item>
        <item name="android:paddingLeft">@dimen/item_music_picker_padding</item>
        <item name="android:background">@drawable/item_music_picker_bg</item>
    </style>

    <style name="ListItemLeftImage">
        <item name="android:layout_width">@dimen/item_music_picker_image_width</item>
        <item name="android:layout_height">@dimen/item_music_picker_image_height</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
    </style>

    <style name="ListItemTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/musicPickerTextColor</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ListItemTextDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/musicPickerTextSecondaryColor</item>
    </style>

    <style name="ListItemRightImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/item_music_picker_padding</item>
        <item name="android:tint">@color/musicPickerTextSecondaryColor</item>
    </style>

    <style name="ListItemRightImage.Last">
        <item name="android:layout_marginRight">0dp</item>
    </style>

</resources>
