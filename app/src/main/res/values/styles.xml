<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TrackDisplay">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#BBFFFFFF</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="PlaybackButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:background">@drawable/playback_button_bg</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="PlaybackButton.LeftSpaced">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="PlaybackButton.RightSpaced">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
