    android:id="@+id/item_user_container"
    style="@style/ListItemContainer">

    <ImageView
        android:id="@+id/item_user_image"
        style="@style/ListItemLeftImage" />

    <LinearLayout
        style="@style/ListItemTextContainer">

        <TextView
            android:id="@+id/item_user_title"
            android:maxLines="1"
            style="@style/ListItemTextTitle" />

        <TextView
            android:id="@+id/item_user_description"
            android:maxLines="1"
            style="@style/ListItemTextDescription" />

    </LinearLayout>

