<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:background="@color/subthemeBackground"
    android:layout_marginBottom="0.5dp"
    >

    <ImageView
        android:id="@+id/session_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:tint="@color/subthemeForeground"
        android:src="@drawable/ic_wifi_tethering_black_36dp"
        />

    <TextView
        android:id="@+id/session_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/session_list_item_icon"
        android:textSize="15sp"
        android:textColor="@color/subthemeForeground"
        android:text="Title"
        />

    <TextView
        android:id="@+id/session_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_list_item_name"
        android:layout_toRightOf="@id/session_list_item_icon"
        android:textSize="13sp"
        android:textColor="@color/subthemeSecondaryForeground"
        android:text="15 Connected" />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >

            <ImageView
                android:id="@+id/session_list_item_playing_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:tint="@color/subthemeForeground"
                android:src="@drawable/ic_equalizer_black_24dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/session_list_item_playing_icon"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/session_list_item_playing_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/subthemeForeground"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/session_list_item_playing_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/subthemeSecondaryForeground"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </LinearLayout>



    </RelativeLayout>

</RelativeLayout>