<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/chatCurrentUserMessageBg" />
            </shape>
        </rotate>
    </item>

    <item android:right="@dimen/user_message_radius_plus_tick_size">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg" />
        </shape>
    </item>

    <item android:right="@dimen/user_message_tick_size">
        <shape android:shape="rectangle" >
            <solid android:color="@color/chatCurrentUserMessageBg" />
            <corners android:radius="@dimen/user_message_radius" />
        </shape>
    </item>

</layer-list>